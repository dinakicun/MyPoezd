@model MyPoezd.Models.City
<style>
    .city-validation-error {
        font-size: 15px;
        color: #97a4e5;
    }

    .border {
        border-radius: 10px;
        border-color: #97a4e5;
        border-width: 1px;
        border-style: dashed;
        margin-top: 20px;
    }

    h2 {
        font-family: 'Literata', serif;
        color: #97a4e5;
    }
</style>
<form method="post" asp-action="CitiesEdit" onsubmit="return validateForm6()">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-secondary"></div>
        <div class="form-group row">
            <h2 >Изменение города</h2>
        </div>
        <div class = "row">
            <div class="col-8"> 

                <div class = "form-group row">
                    <div class="col-4">
                        <label asp-for="Name" style="margin-left:120px">Название города</label>
                    </div>
                    <div class="col-8">
                        <input name="Name" class="form-control city-input" maxlength="20" />
                        <p class="city-validation-error" id="nameError"></p>
                    </div>
                </div>

                <div class = "form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn w-100" style="background-color: #97a4e5; color:white" value="Изменить" />
                        </div>
                        <br/>
                        <div class="col">
                            <a asp-action="CitiesIndex" class="btn w-100" style="background-color: #c8c8c8; color:white"><i class="fa-solid fa-arrow-right-from-bracket"> &nbsp; </i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    function validateForm6() {
        var nameInput = document.getElementsByName("Name")[0];
        var nameError = document.getElementById("nameError");

        nameError.textContent = "";

        var namePattern = /^[А-Яа-я]+$/;

        if (nameInput.value.trim() === "") {
            nameError.textContent = "Пожалуйста, введите название города.";
            return false;
        }

        if (!namePattern.test(nameInput.value)) {
            nameError.textContent = "Название города должно содержать только русские буквы.";
            return false;
        }

        return true;
    }
</script>