@model MyPoezd.Models.Train

<style>
    .train-validation-error {
        font-size: 15px;
        color: #97a4e5;
    }

    .border {
        border-radius: 10px;
        border-color: #97a4e5;
        border-width: 1px;
        border-style: dashed;
        margin-top: 20px;
    }

    h2 {
        font-family: 'Literata', serif;
        color: #97a4e5;
    }
</style>

<form method="post" asp-action="TrainsCreate" onsubmit="return validateForm7()">
     <div class="border p-3" style="margin-top: 20px;">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group row">
            <h2 class=" pl-3">Добавление поезда</h2>
         </div>
         <div class = "row">
             <div class="col-8"> 

                 <div class = "form-group row">
                     <div class="col-4">
                         <label asp-for="Name" style="margin-left:120px">Название поезда</label>
                     </div>
                     <div class="col-8">
                        <input asp-for="Name" name="nameInput" class="form-control" maxlength="5"/>
                        <p class="train-validation-error" id="nameError"></p>
                     </div>
                 </div>

                 <div class = "form-group row">
                     <div class="col-8 offset-4 row">

                         <div class="col">
                            <input type="submit" class="btn w-100" style="background-color:#97a4e5; color:white;margin-top:10px" value="Добавить" />
                         </div>
                         <br/>
                         <div class="col">
                            <a asp-action="TrainsIndex" class="btn w-100" style="background-color:#97a4e5 ; color:white; margin-top:10px"><i class="fa-solid fa-arrow-right-from-bracket"> &nbsp; </i>Назад</a>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </form>
<script>
    function validateForm7() {
        var nameInput = document.getElementsByName("nameInput")[0];
        var nameError = document.getElementById("nameError");

        nameError.textContent = "";


        if (nameInput.value.trim() === "") {
            nameError.textContent = "Пожалуйста, введите название поезда.";
            return false;
        }

        return true;
    }
</script>