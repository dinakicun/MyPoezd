@model IEnumerable<MyPoezd.Models.Ticket>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-secondary">Билеты</h2>
        </div>
        
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        ID Клиента
                    </th>
                    <th>
                        Дата отправки
                    </th>
                    <th>
                        Дата прибытия
                    </th>
                    <th>
                        Город отправки
                    </th>
                    <th>
                        Город прибытия
                    </th>
                    <th>
                        Взаимодействия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td width="5%">@ticket.Id</td>
                        <td width="5%">@ticket.UserId</td>
                        <td width="10%">@ticket.Route.DepartureDate</td>
                        <td width="10%">@ticket.Route.ArrivalDate</td>
                        <td width="10%">@ticket.Route.ArrivalCity.Name</td>
                        <td width="10%">@ticket.Route.DepartureCity.Name</td>
                        <td class="text-center">
                            <div class="w-50 btn-group" role="group">
                                <a asp-controller="Tickets" asp-route-Id="@ticket.Id" asp-action="Delete" class="btn mx-2" style="background-color:#97a4e5">
                                    <i class="fa-solid fa-trash-can"></i> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Расписаний в базе данных нет</p>
    }

</div>