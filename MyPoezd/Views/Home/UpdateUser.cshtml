@model MyPoezd.Models.User
<form method="post" asp-action="UpdateUser">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-secondary"></div>
        <div class="form-group row">
            <h2 class="text-secondary pl-3">Личные данные</h2>
        </div>
        <div class="row">
            <div class="col-8">
                
                <input type="hidden" asp-for="Id" class="form-control" />


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Surname">Фамилия</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Surname" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">Имя</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MiddleName">Отчество</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="MiddleName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PassportData">Паспортные данные</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="PassportData" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Изменить" />
                        </div>
                        <br />
                        <div class="col">
                            <a asp-action="PersonalArea" class="btn btn-success w-100"><i class="fa-solid fa-arrow-right-from-bracket"> &nbsp; </i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>