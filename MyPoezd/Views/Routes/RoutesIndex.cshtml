@model IEnumerable<MyPoezd.Models.Route>
<style>


    .container {
        border-radius: 10px;
        border-color: #97a4e5;
        border-width: 1px;
        border-style: dashed;
        margin-top: 20px;
    }

    h2 {
        font-family: 'Literata', serif;
        color: #97a4e5;
    }
</style>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 >Маршруты поездов</h2>
        </div>
        <div class="col-2 align-center">
            <a asp-controller="Routes" asp-action="RoutesCreate" class="btn" style="background-color:#97a4e5; color:white">
                <i class="fa-solid fa-plus"></i> &nbsp; Добавить новое расписание
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Дата отправления
                    </th>
                    <th>
                        Дата прибытия
                    </th>
                    <th>
                        Город отправления
                    </th>
                    <th>
                        Город прибытия
                    </th>
                    <th>
                        Купе цена
                    </th>
                    <th>
                        Плацкарт цена
                    </th>
                    <th>
                       Поезд
                    </th>
                    <th>
                        Взаимодействия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var train in Model)
                {
                    <tr>
                        <td width="4%">@train.Id</td>
                        <td width="18%">@train.DepartureDate</td>
                        <td width="18%">@train.ArrivalDate</td>
                        <td width="10%">@train.DepartureCity.Name</td>
                        <td width="10%">@train.ArrivalCity.Name</td>
                        <td width="15%">@train.PriceCoupe</td>
                        <td width="15%">@train.PriceEconom</td>
                        <td width="15%">@train.TrainsId</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Routes" asp-route-Id="@train.Id" asp-action="Delete" class="btn mx-2" style="background-color:#97a4e5; color:white">
                                    <i class="fa-solid fa-trash-can"></i> Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Расписаний в базе данных нет</p>
    }

</div>