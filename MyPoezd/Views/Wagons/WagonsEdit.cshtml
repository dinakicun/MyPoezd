@model MyPoezd.Models.Wagon
<form method="post" asp-action="WagonsEdit">
    <div class="border p-3" style=" margin-top:10px">
        <div asp-validation-summary="ModelOnly" class="text-secondary"></div>
        <div class="form-group row">
            <h2 class="text-secondary pl-3">Изменение вагона</h2>
        </div>
        <div class = "row">
            <div class="col-8"> 

                <div class = "form-group row">
                    <div class="col-4">
                        <label asp-for="Name">Название вагона</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class = "form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn w-100" style="background-color:#97a4e5; margin-top:10px" value="Изменить" />
                        </div>
                        <br/>
                        <div class="col">
                            <a asp-action="WagonsIndex" class="btn w-100" style="background-color:#97a4e5; margin-top:10px"><i class="fa-solid fa-arrow-right-from-bracket"> &nbsp; </i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>