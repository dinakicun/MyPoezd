@model MyPoezd.Models.ViewModels.WagonsView


 <form method="post" asp-action="WagonsCreate">
     <div class="border p-3">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group row">
            <h2 class="text-secondary pl-3">Добавление вагона</h2>
         </div>
         <div class = "row">
             <div class="col-8"> 

                 <div class = "form-group row">
                     <div class="col-4">
                         <label asp-for="WagonName">Название вагона</label>
                     </div>
                     <div class="col-8">
                         <input asp-for="WagonName" class="form-control"/>
                         <span asp-validation-for="WagonName" class="text-danger"></span>
                     </div>
                 </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CountOfPlaces">Кол-во мест</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CountOfPlaces" class="form-control" />
                        <span asp-validation-for="CountOfPlaces" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.WagonTypeName">Тип вагона</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.WagonTypeName" class="form-control">
                            @{
                                foreach (var item in Model.TrainTypes)
                                {
                                    <option>@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.TrainName">Поезд</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="@Model.TrainName" class="form-control">
                            @{
                                foreach (var item in Model.Trains)
                                {
                                    <option>@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                 <div class = "form-group row">
                     <div class="col-8 offset-4 row">

                         <div class="col">
                            <input type="submit" class="btn w-100" style="background-color:#97a4e5; margin-top:10px"  value="Добавить" />
                         </div>
                         <br/>
                         <div class="col">
                            <a asp-action="WagonsIndex" class="btn w-100" style="background-color:#97a4e5; margin-top:10px"><i class="fa-solid fa-arrow-right-from-bracket"> &nbsp; </i>Назад</a>
                         </div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </form>